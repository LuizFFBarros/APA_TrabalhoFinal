@model List<UniversidadeXYZ.Web.Models.DisciplinaModel>
@{
    ViewData["Title"] = "Index";
}



<h2>Disciplina</h2>


<div class="row">
    <div class="col-md-12">
        <ul class="nav navbar-nav">
            <li><a class="btn-menu glyphicon glyphicon-list btn" asp-area="" asp-controller="Disciplina" asp-action="Index"></a></li>
            <li><a class="btn-menu glyphicon glyphicon-plus btn" asp-area="" asp-controller="Disciplina" asp-action="AdicionarDisciplina"></a></li>

        </ul>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>CargaHoraria</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td><label>@Model[i].CodigoDisciplina</label></td>
                        <td><label>@Model[i].Nome</label></td>
                        <td><label>@Model[i].CargaHoraria</label></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<br />

