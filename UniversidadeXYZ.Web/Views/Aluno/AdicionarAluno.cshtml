@model UniversidadeXYZ.Web.Models.AlunoModel
@{
    ViewData["Title"] = "AdicionarAluno";
}

<h2>Area do Aluno</h2>
<div class="row">
    <div class="col-md-12">
        <ul class="nav navbar-nav">
            <li><a class="btn-menu glyphicon glyphicon-list btn" asp-area="" asp-controller="Aluno" asp-action="Index"></a></li>
            <li><a class="btn-menu glyphicon glyphicon-plus btn" asp-area="" asp-controller="Aluno" asp-action="AdicionarAluno"></a></li>
            <li><a class="btn-menu glyphicon glyphicon-pencil btn" asp-area="" asp-controller="" asp-action=""></a></li>
            <li><a class="btn-menu glyphicon glyphicon-remove btn" asp-area="" asp-controller="" asp-action=""></a></li>
        </ul>
    </div>
</div>
<hr />
<div class="row">
    <form asp-action="SalvarAluno">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Nome, new { @id = "lblNome" })
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @id = "txtNome" })
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.CPF, new { @id = "lblCPF" })
                @Html.TextBoxFor(m => m.CPF, new { @class = "form-control", @id = "txtCPF" })
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Logradouro, new { @id = "lblLogradouro" })
                @Html.TextBoxFor(m => m.Logradouro, new { @class = "form-control", @id = "txtLogradouro" })
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Telefone, new { @id = "lblTelefone" })
                @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control", @id = "txtTelefone" })
            </div>
        </div>
        <div class="col-md-12">
            <input type="submit" class="btn-primary btn btn-success" id="btnSalvar" value="Salvar" />
            <input type="button" class="btn-primary btn btn-danger" id="btnSalvar" value="Limpar" />
        </div>
    </form>
</div>

